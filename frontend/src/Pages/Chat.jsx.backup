        return <BsCheck className="w-4 h-4 text-gray-400" />;
      case "delivered":
        return <BsCheckAll className="w-4 h-4 text-gray-400" />;
      case "read":
        return <BsCheckAll className="w-4 h-4 text-blue-400" />;
      default:
        return null;
