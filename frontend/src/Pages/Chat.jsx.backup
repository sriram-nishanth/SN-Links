    setShowVideoCall(false);
    setCallDuration(0);
    if (callIntervalRef.current) {
      clearInterval(callIntervalRef.current);
    }
  };

  const startAudioCall = () => {
    setShowAudioCall(true);
    setCallDuration(0);
    callIntervalRef.current = setInterval(() => {
      setCallDuration((prev) => prev + 1);
    }, 1000);
